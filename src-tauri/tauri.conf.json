{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "offline-first-react-router-tauri-template",
	"version": "0.1.0",
	"identifier": "dev.jhoan.offline-first-react-router-tauri-template",
	"build": {
		"frontendDist": "../build/client/",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "offline-first-react-router-tauri-template",
				"width": 400,
				"height": 400,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
			"migrations/*"
		]
	},
	"plugins": {
		"sql": {
			"preload": [
				"sqlite:database.db"
			]
		}
	}
}